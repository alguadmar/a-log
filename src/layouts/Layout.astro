---
import '@/styles/global.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

const { isWide = false } = Astro.props
---

<!doctype html>
<html lang={SITE.locale} class="color-scheme-unset">
  <Head>
    <!-- Preload critical assets -->
    <link rel="preload" href="/fonts/JetBrainsMono[wght].woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/GeistVF.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preconnect" href="https://a-log-production.up.railway.app" crossorigin>
    <meta name="view-transition" content="same-origin">
    
    <!-- OptimizaciÃ³n de CSS para navegadores antiguos -->
    <style is:inline>
      @supports not (contain: paint) {
        /* Fallback para navegadores que no soportan view transitions */
        .page-content { animation: fadeIn 0.15s ease-out; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
      }
    </style>
    
    <slot name="head" />
  </Head>
  <body>
    <div class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
      <Header />
      <main class="grow">
        <div
          class={cn(
            'mx-auto flex grow flex-col gap-y-6 px-4 page-content',
            !isWide && 'max-w-3xl',
          )}
          transition:animate="fade"
        >
          <slot />
        </div>
      </main>
      <Footer />
    </div>

    <!-- Preconnect to likely domains -->
    <link rel="preconnect" href="https://a-log-production.up.railway.app">
  </body>
</html>